{
     "name": "linux-wallpaperengine-gui",
     "version": "0.1.2",
     "description": "A graphical user interface for managing wallpapers on Linux, powered by Electron, Svelte, and linux-wallpaperengine.",
     "main": "./out/main/index.js",
     "author": "AzPepoze",
     "homepage": "https://github.com/AzPepoze/linux-wallpaperengine-gui",
     "scripts": {
          "format": "prettier --plugin prettier-plugin-svelte --write .",
          "lint": "eslint --cache .",
          "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
          "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
          "typecheck": "npm run typecheck:node && npm run svelte-check",
          "start": "electron-vite preview",
          "dev": "electron-vite dev",
          "build": "npm run typecheck && electron-vite build",
          "postinstall": "electron-builder install-app-deps",
          "build:unpack": "npm run build && electron-builder --dir",
          "build:linux": "npm run build && electron-builder --linux",
     "build:release": "npm run build && electron-builder --linux --publish always && mkdir -p release && cp dist/* release/"
     },
     "dependencies": {
          "@electron-toolkit/preload": "^3.0.1",
          "@electron-toolkit/utils": "^4.0.0",
          "markdown-it": "^14.1.0",
          "tree-kill": "^1.2.2"
     },
     "devDependencies": {
          "@electron-toolkit/eslint-config-prettier": "^3.0.0",
          "@electron-toolkit/eslint-config-ts": "^3.0.0",
          "@electron-toolkit/tsconfig": "^1.0.1",
          "@sveltejs/vite-plugin-svelte": "^5.0.3",
          "@types/markdown-it": "^14.1.2",
          "@types/node": "^22.14.1",
          "electron": "^35.1.5",
          "electron-builder": "^25.1.8",
          "electron-updater": "^6.6.2",
          "electron-vite": "^3.1.0",
          "eslint": "^9.24.0",
          "eslint-plugin-svelte": "^3.5.1",
          "prettier": "^3.5.3",
          "prettier-plugin-svelte": "^3.3.3",
          "sass": "^1.89.2",
          "svelte": "^5.26.1",
          "svelte-check": "^4.1.5",
          "typescript": "^5.8.3",
          "vite": "^6.2.6"
     },
     "pnpm": {
          "onlyBuiltDependencies": [
               "electron",
               "esbuild"
          ]
     }
}
