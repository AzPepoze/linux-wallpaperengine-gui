{
     "name": "linux-wallpaperengine-gui",
     "version": "0.0.1",
     "type": "module",
     "description": "A graphical user interface for managing wallpapers on Linux, powered by Go(Backend) Electron(Frontend) and linux-wallpaperengine.",
     "author": {
          "name": "AzPepoze",
          "email": "azpepoze@gmail.com"
     },
     "main": "build/frontend/electron/main.js",
     "scripts": {
          "dev": "npm run build:backend && ./build/backend/linux-wallpaperengine-gui",
          "dev:frontend": "vite",
          "start": "pnpm build && ./dist/linux-unpacked/linux-wallpaperengine-gui --debug-mode",
          "build": "npm run build:backend && vite build && electron-builder --linux --dir",
          "build:all": "npm run build:backend && vite build && electron-builder --linux AppImage deb rpm --publish never",
          "build:backend": "mkdir -p build/backend && cd src/backend && go build -o ../../build/backend/linux-wallpaperengine-gui main.go",
          "preview": "vite preview",
          "check": "tsx utils/check.ts",
          "check:frontend": "tsx utils/check.ts --frontend",
          "check:backend": "tsx utils/check.ts --backend"
     },
     "devDependencies": {
          "@sveltejs/vite-plugin-svelte": "^6.2.4",
          "@tsconfig/svelte": "^5.0.7",
          "@types/colorthief": "^2.6.1",
          "@types/markdown-it": "^14.1.2",
          "@types/node": "^25.2.3",
          "electron": "^40.4.1",
          "electron-builder": "^26.7.0",
          "markdown-it": "^14.1.1",
          "sass": "^1.97.3",
          "svelte": "^5.51.0",
          "svelte-check": "^4.4.0",
          "tsx": "^4.21.0",
          "typescript": "~5.9.3",
          "vite": "^7.3.1",
          "vite-plugin-electron": "^0.29.0",
          "vite-plugin-electron-renderer": "^0.14.6"
     },
     "dependencies": {
          "colorthief": "^2.6.0",
          "steamworks.js": "^0.4.0"
     },
     "pnpm": {
          "onlyBuiltDependencies": [
               "electron",
               "esbuild",
               "sharp",
               "@parcel/watcher"
          ]
     },
     "build": {
          "directories": {
               "output": "dist"
          },
          "extraResources": [
               {
                    "from": "build/backend/linux-wallpaperengine-gui",
                    "to": "linux-wallpaperengine-gui"
               },
               {
                    "from": "build/frontend/icon.png",
                    "to": "icon.png"
               }
          ],
          "files": [
               "build/frontend/**/*"
          ],
          "linux": {
               "artifactName": "${productName}.${ext}",
               "executableName": "linux-wallpaperengine-gui",
               "category": "Utility"
          }
     }
}
