{
     "name": "linux-wallpaperengine-gui",
     "version": "0.0.1",
     "type": "module",
     "description": "A graphical user interface for managing wallpapers on Linux, powered by Electron and linux-wallpaperengine.",
     "author": {
          "name": "AzPepoze",
          "email": "azpepoze@gmail.com"
     },
     "main": "build/frontend/electron/main.js",
     "scripts": {
          "dev": "npm run build:backend && ./build/backend/linux-wallpaperengine-gui",
          "dev:frontend": "vite",
          "start": "npm run dev",
          "build": "npm run build:backend && vite build && electron-builder --linux --dir",
          "build:all": "npm run build:backend && vite build && electron-builder --linux AppImage deb rpm --publish never",
          "build:backend": "mkdir -p build/backend && cd src/backend && go build -o ../../build/backend/linux-wallpaperengine-gui main.go",
          "preview": "vite preview",
          "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.json"
     },
     "devDependencies": {
          "@sveltejs/vite-plugin-svelte": "^5.1.1",
          "@tsconfig/svelte": "^5.0.5",
          "@types/colorthief": "^2.6.0",
          "@types/markdown-it": "^14.1.2",
          "@types/node": "^22.0.0",
          "electron": "^33.2.0",
          "electron-builder": "^25.1.8",
          "markdown-it": "^14.1.0",
          "sass": "^1.93.2",
          "svelte": "^5.40.0",
          "svelte-check": "^4.3.3",
          "typescript": "~5.6.3",
          "vite": "^6.3.7",
          "vite-plugin-electron": "^0.29.0",
          "vite-plugin-electron-renderer": "^0.14.6"
     },
     "dependencies": {
          "colorthief": "^2.6.0"
     },
     "pnpm": {
          "onlyBuiltDependencies": [
               "electron",
               "esbuild",
               "sharp",
               "@parcel/watcher"
          ]
     },
     "build": {
          "directories": {
               "output": "dist"
          },
          "extraResources": [
               {
                    "from": "build/backend/linux-wallpaperengine-gui",
                    "to": "linux-wallpaperengine-gui"
               }
          ],
          "files": [
               "build/frontend/**/*"
          ],
          "linux": {
               "artifactName": "${productName}.${ext}",
               "executableName": "linux-wallpaperengine-gui-electron",
               "category": "Utility"
          },
          "extraFiles": [
               {
                    "from": "src/backend/launcher.sh",
                    "to": "linux-wallpaperengine-gui"
               }
          ]
     }
}
